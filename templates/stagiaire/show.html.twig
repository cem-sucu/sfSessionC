{% extends 'base.html.twig' %}

{% block title %}Détail du stagiaire{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="{{ asset('css/templateCSS/stagiaire/stagiaireDetails.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        {% for message in app.flashes('succes-update') %}
        <div class="succes-update">
            {{ message }}
        </div>
        {% endfor %}
        <h2><i class="fa-regular fa-id-card"></i>Détail du stagiaire</h2>
            <div class="containerDetails">
                <!--le filter | raw , permet de gerer les balise que l'on peut eventuellement etre amené a utiliser dans une toString par exemple-->
                {{ stagiaire.getShow() | raw}} <br>
                <!-- je dirige vers la page updtate.html.twig-->
                <div class="updateButton">
                    <a href="{{ path('update_stagiaire', {'id': stagiaire.id}) }}"><i class="fa-solid fa-pen-to-square"> modifier</i></a>      
                </div>
            </div>
            <div class="session">
                <h2>Sessions prévus</h2>
                <div class="detailSession">
                    <ul>
                        {% for session in stagiaire.sessions %}
                            <li class="sessionPrevu">{{ session.nom}}</li>
                        {% endfor %}
                    </ul> 
                </div>
            </div>        
    </div>

{% endblock %}
