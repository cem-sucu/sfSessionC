        {{ message }}
    </div>
    {% endfor %}

    <h2>FICHE STAGIAIRE</h2> 
    {% for stagiaire in stagiaires %}
        <a href="{{ path('show_stagiaire', {'id': stagiaire.id}) }}">{{ stagiaire | raw}}</a> <br><br> <!--le filter | raw , permet de gerer les balise que l'on peut eventuellement etre amenÃ© a utiliser dans une toString par exemple-->        
    {% endfor %}

{% endblock %}
